<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_bluetooth"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/wifi_gray" />

            <ImageView
                android:id="@+id/img_wifi"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/bluetooth_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.example.bestl.kitdee.custom.TextViewCustom
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                tools:text="d/m/y time" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <com.example.bestl.kitdee.custom.TextViewCustom
            android:id="@+id/btn_calc"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bolder_70_black"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:paddingTop="10dp"
            android:text="คิดเงิน"
            android:textSize="@dimen/text_normal" />

        <com.example.bestl.kitdee.custom.TextViewCustom
            android:id="@+id/btn_sum_sir"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bolder_70_black"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:paddingTop="10dp"
            android:text="สรุปยอดขาย"
            android:textSize="@dimen/text_normal" />


    </LinearLayout>


</LinearLayout>